<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/containerCirculo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/circulo_img_perfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <ImageView
        android:id="@+id/icNomeUsuario"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_nome_usuario"
        app:layout_constraintTop_toBottomOf="@id/containerCirculo"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtNomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="10dp"
        android:text="marcos duaarte"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/containerCirculo"
        app:layout_constraintStart_toEndOf="@id/icNomeUsuario" />

    <ImageView
        android:id="@+id/icEmailUsuario"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_email_usuario"
        app:layout_constraintTop_toBottomOf="@id/icNomeUsuario"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtEmailUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="45dp"
        android:text="marcos duasdasaarte"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtNomeUsuario"
        app:layout_constraintStart_toEndOf="@id/icEmailUsuario"/>

    <Button
        android:id="@+id/btDeslogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bt_dialog_deslogar"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:backgroundTint="@color/dark_blue"
        app:layout_constraintTop_toBottomOf="@id/icEmailUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>